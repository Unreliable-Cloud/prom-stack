multitenancy_enabled: false

usage_stats:
  enabled: false

server:
  http_listen_port: 9009
  log_level: info

store_gateway:
  sharding_ring:
    replication_factor: 1

limits:
  compactor_blocks_retention_period: {{ mimir_config['retention'] }}
  max_global_series_per_user: {{ mimir_config['max_series'] }}
  max_label_names_per_series: {{ mimir_config['max_labels'] }}

common:
  storage:
    backend: s3
    s3:
      endpoint: {{ loki_config['endpoint'] }}
      region: {{ loki_config['region'] }}
      access_key_id: {{ mimir_aws['access_key'] }}
      secret_access_key: {{ mimir_aws['secret_key'] }}
      insecure: true
      bucket_name: {{ mimir_config['buckets']['name'] }}

blocks_storage:
  storage_prefix: blocks
  tsdb:
    dir: {{ mimir_config['datadir'] }}/tsdb

alertmanager_storage:
  storage_prefix: alertmanager

ruler_storage:
  storage_prefix: ruler

compactor:
  compaction_interval: 30m
  max_closing_blocks_concurrency: 2
  max_opening_blocks_concurrency: 4
  symbols_flushers_concurrency: 4
  data_dir: {{ mimir_config['datadir'] }}/compactor
  sharding_ring:
    wait_stability_min_duration: 1m
    kvstore:
      store: memberlist

distributor:
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: memberlist

ingester:
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: memberlist
    replication_factor: 1


ruler:
  rule_path: {{ mimir_config['datadir'] }}/ruler
  alertmanager_url: http://alertmanager:9093

alertmanager:
  data_dir: {{ mimir_config['datadir'] }}/alertmanager
  external_url: http://alertmanager:9093
