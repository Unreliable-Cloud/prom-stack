multitenancy_enabled: false

usage_stats:
  enabled: false

server:
  http_listen_port: 9009

store_gateway:
  sharding_ring:
    replication_factor: 1

limits:
  compactor_blocks_retention_period: 180d
  max_global_series_per_user: 1500000
  max_label_names_per_series: 1000

common:
  storage:
    backend: s3
    s3:
      endpoint: {{ loki_config['endpoint'] }}
      region: {{ loki_config['region'] }}
      access_key_id: {{ mimir_aws['access_key'] }}
      secret_access_key: {{ mimir_aws['secret_key'] }}
      insecure: true

blocks_storage:
  s3:
    bucket_name: {{ mimir_config['buckets']['blocks'] }}
alertmanager_storage:
  s3:
    bucket_name: {{ mimir_config['buckets']['alertmanager'] }}
ruler_storage:
  s3:
    bucket_name: {{ mimir_config['buckets']['ruler'] }}

compactor:
  data_dir: {{ mimir_config['datadir'] }}/compactor
  sharding_ring:
    kvstore:
      store: memberlist

distributor:
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: memberlist

ingester:
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: memberlist
    replication_factor: 1
